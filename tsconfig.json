{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "src"
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules"]
}
